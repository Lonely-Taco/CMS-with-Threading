<UserControl
    x:Class="CMS.main.com.nhlstenden.foodle.pages.UserSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Custom="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls="using:MonoTorrent.GUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CMS.main.com.nhlstenden.foodle.pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid Grid.Row="1" HorizontalAlignment="Center">
        <StackPanel Margin="0,40,0,0">
            <TextBlock FontSize="20">Theme:</TextBlock>
            <ComboBox
                SelectionChanged="ColorComboBox_SelectionChanged"
                x:Name="HealthLabelMultiSelectComboBox"
                Width="200"
                Height="50"
                MinHeight="26"
                FontSize="20">
                <x:String>Light</x:String>
                <x:String>Dark</x:String>
            </ComboBox>
            <TextBlock FontSize="20">Generate Report</TextBlock>
            <Button
                x:Name="CreateReport"
                Width="200"
                Height="50"
                Content="Make report"
                FontSize="30" />
        </StackPanel>

    </Grid>
</UserControl>
